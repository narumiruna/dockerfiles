set nocompatible              " be iMproved, required
filetype off                  " required

set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()

Plugin 'VundleVim/Vundle.vim'
Plugin 'python-mode/python-mode'
Plugin 'davidhalter/jedi-vim'
Plugin 'flazz/vim-colorschemes'
Plugin 'scrooloose/nerdtree'
Plugin 'ctrlpvim/ctrlp.vim'
Plugin 'terryma/vim-multiple-cursors'
Plugin 'fisadev/vim-isort'

call vundle#end()            " required
filetype plugin indent on    " required

" http://vimdoc.sourceforge.net/htmldoc/

syntax on " enable syntax hightlighting
colorscheme molokai " change the color scheme to molokai
set encoding=utf-8 " set utf-8 as a standard encoding
set number " display line numbers
set backspace=2 " make backspace work like most other programs
set ruler " display the cursor position
set autoindent " keep the same indent
set ignorecase " ignore case when searching
set smartcase " try to be smart about cases when searching
set hlsearch " hightlight search results
set incsearch " makes search act like search in modern browsers
set noswapfile " do not create a swap file 
set nobackup " do not make a backup
set nowritebackup " do not make a backup
set autoread " Automatically read changed file again
set cursorline " Highlight the screen line of the cursor 
set expandtab " Use the appropriate number of spaces to insert a tab
set tabstop=4 "Number of spaces that a tab
set shiftwidth=4 "Number of spaces to use for each step of (auto)indent
set foldlevel=100 " open all folds 
" set paste " paste mode
set copyindent " copy the structure of the existing line indent when autoindent a new line
" set preserveindent " When changing the indent of the current line, preserve as much of the indent structure as possible.
set clipboard=unnamed " macos clipboard sharing
set mouse+=a " set mouse in all previous modes
